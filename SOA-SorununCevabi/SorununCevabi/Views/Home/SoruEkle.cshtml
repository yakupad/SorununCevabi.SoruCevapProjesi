
@{
    ViewBag.Title = "SoruEkle";
}
<link href="~/Content/fullcalendar.print.css" media="print" rel="stylesheet" />
<!-- Main content -->


<section class="content" style="margin-top:-15px;">
    <div class="row">

        <!-- /.col -->
        <div class="col-md-9">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Yeni Bir Soru Sor</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body">

                    <div class="form-group">
                        <input class="form-control" name="sorubasligi" id="sorubasligi" placeholder="Soru Başlığı">
                    </div>
                    <div class="form-group">
                        <textarea id="compose-textarea" class="form-control" style="height: 300px"></textarea>
                    </div>

                </div>



                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="pull-right">

                        <button type="button" id="soruekle" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Gönder</button>
                    </div>

                </div>
                <!-- /.box-footer -->

            </div>
            <!-- /. box -->
        </div>
    </div>
</section>
<!-- /.col -->




<script>
            $(function () {
                $("#soruekle").click(function () {
                    var sorubasligi = $("#sorubasligi").val();
                    var soruicerigi = $("#compose-textarea").val();
                    console.log(sorubasligi);

                    $.post("../Home/YeniSoruEkle", { sorubasligi: sorubasligi, soruicerigi: escape(soruicerigi) }, function (data) {
                        if (data.basari == true) {
                            location.href = "../Home/SoruEkle";
                        }
                        else {
                            alert("Bir hata oluştu");
                        }
                    });

                });
            });
</script>

<script src="~/Scripts/bootstrap3-wysihtml5.all.min.js"></script>
<script>
            $(function () {
                //Add text editor
                $("#compose-textarea").wysihtml5();
            });
</script>
