                                        <div class="img-push">
                                            <script>

                                            </script>
                                            <input type="text" onkeypress="myFunction(@sorununcevabi.cevapID);" class="form-control input-sm @sorununcevabi.cevapID" placeholder="Enter tuşuna basarak yorumunuzu gönderin" />

                                        </div>

                                    </div>
                                    <!-- /.box-footer -->
                                </div>
                                <!-- /.box -->
                            </div>




















                        </div>
                    </li>
                            }
