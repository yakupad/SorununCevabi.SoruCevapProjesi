                                        </div>
                                        <!-- /.box-tools -->
                                    </div>
                                    <!-- /.box-header -->
                                    <!-- /.box-body -->
                                    <div class="box-footer box-comments">
                                        @foreach (var yorum in sorununcevabi.yorumlar)
