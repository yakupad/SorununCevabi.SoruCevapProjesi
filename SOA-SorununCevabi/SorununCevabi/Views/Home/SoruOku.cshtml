                        <button type="button" id="cevapekle" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Cevapla</button>
                    </div>
                    @*<button type="reset" id="sifirla" class="btn btn-default"><i class="fa fa-times"></i> Temizle</button>*@
                </div>

                <!-- /.box-footer -->
            </div>
            <!-- /. box -->




        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
