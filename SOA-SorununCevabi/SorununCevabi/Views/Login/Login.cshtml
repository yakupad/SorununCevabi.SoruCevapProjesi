
@{
    Layout = null;
}


<div id="uyari"></div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sorunun Cevabı | Giriş</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->




</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Sorunun</b>CEVABI</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Aşağıdaki kutuları doğru doldurduğunuz takdirde içeri girebileceksiniz.</p>

            <div class="form-group has-feedback">
                <input type="email" id="eposta" class="form-control" placeholder="E-Posta">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" id="parola" class="form-control" placeholder="Parola">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox ">
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" id="girisyap" class="btn btn-primary btn-block btn-flat">Giriş Yap</button>
                </div>
                <!-- /.col -->
            </div>

            <div class="social-auth-links text-center">
                <p>- YADA -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Facebook kullanarak giriş yap
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Google+ kullanarak giriş yap
                </a>
            </div>
            <!-- /.social-auth-links -->
            <a href="#">Şifremi Unuttum</a><br>
            <a href="../Login/Register" class="text-center">Yeni üye kaydı yap</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>

    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/icheck.min.js"></script>


    <script>
                $(function () {
                    $("#girisyap").click(function () {
                        console.log("asasasasas");
                        var eposta = $("#eposta").val();
                        var parola = $("#parola").val();
                            $.post("../Login/GirisYap", { eposta: eposta,parola:parola }, function (data) {
                                if (data.basari != -1) {
                                    setTimeout("location.href = '../Home/Sorular'", 2500);
                                    $("#uyari").html('<div class="alert alert-success alert-dismissible" id="kosul"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4><i class="icon fa fa-danger"></i> Başarılı!</h4>Kullanıcı Girişi Başarılı! Yönlendiriliyorsunuz...</div>').hide(5000);


                                }
                                else
                                {
                                    alert("Giriş Başarısız!");
                                }
                            });
                    });
                });
    </script>






    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>
</html>


